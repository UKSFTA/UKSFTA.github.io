{
  "name": "uksfta-theme",
  "version": "1.0.0",
  "type": "module",
  "description": "UKSF Taskforce Alpha (UKSFTA) Digital Presence - Hugo Theme",
  "main": "index.js",
  "scripts": {
    "start": "hugo server -s exampleSite --themesDir ../.. --disableFastRender -D",
    "dev": "concurrently -n \"CSS,HUGO\" -c \"magenta,blue\" \"npm run watch:css\" \"npm run start\"",
    "build": "npm run build:css && hugo -s exampleSite --themesDir ../.. --minify",
    "build:css": "tailwindcss -i ./assets/css/input.css -o ./static/css/main.css --minify",
    "watch:css": "tailwindcss -i ./assets/css/input.css -o ./static/css/main.css --watch",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:md && npm run lint:html",
    "lint:js": "eslint .",
    "lint:css": "stylelint \"assets/**/*.css\"",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules --ignore exampleSite/public",
    "lint:html": "html-validate \"layouts/**/*.html\"",
    "format": "npx prettier --write \"layouts/**/*.html\"",
    "test": "node scripts/test.js"
  },
  "keywords": [
    "hugo",
    "theme",
    "mod",
    "uksfta",
    "milsim"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/cli": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "globals": "^17.2.0",
    "html-validate": "^10.7.0",
    "lucide-static": "^0.563.0",
    "markdownlint-cli": "^0.47.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.8.1",
    "prettier-plugin-go-template": "^0.0.15",
    "sass": "^1.97.3",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.19"
  }
}
