{
  "name": "uksfta-site",
  "version": "1.0.0",
  "description": "UKSF Taskforce Alpha Portal",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "fetch-data": "node scripts/fetch-external-data.js",
    "start": "hugo server --environment development --disableFastRender -D",
    "dev": "concurrently -n \"HUGO,INTEL,RCON,REGISTRY\" -c \"blue,yellow,red,green\" \"npm run start\" \"npm run watch:intel\" \"npm run service:rcon\" \"npm run service:registry\"",
    "build": "npm run fetch-data && node scripts/generate-stats.js && hugo --environment production --minify",
    "build:dev": "npm run fetch-data && node scripts/generate-stats.js && hugo --environment development --minify",
    "watch:intel": "node -e \"setInterval(() => { try { require('./scripts/fetch-external-data.js') } catch(e){} }, 60000);\"",
    "service:rcon": "node services/rcon-bridge.js",
    "service:registry": "node services/registry-service.js",
    "lint": "biome check assets/js scripts",
    "format": "biome format --write assets/js scripts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.2.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.18"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@defencedigital/css-framework": "^2.80.3",
    "@moduk/frontend": "^2.0.31",
    "@playwright/test": "^1.58.2",
    "@supabase/supabase-js": "^2.95.3",
    "@tailwindcss/typography": "^0.5.19",
    "axios": "^1.13.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "gamedig": "^5.2.0",
    "govuk-frontend": "^5.14.0",
    "milsymbol": "^3.0.3",
    "multer": "^2.0.2"
  }
}
