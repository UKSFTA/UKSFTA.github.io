{
  "name": "uksf-mod-theme",
  "version": "1.0.0",
  "description": "United Kingdom Special Forces (UKSF) Digital Presence - Hugo Theme",
  "main": "index.js",
  "scripts": {
    "start": "hugo server -s exampleSite --themesDir ../.. --disableFastRender -D",
    "dev": "concurrently -n \"CSS,HUGO\" -c \"magenta,blue\" \"npm run watch:css\" \"npm run start\"",
    "build": "npm run build:css && hugo -s exampleSite --themesDir ../..",
    "build:css": "npx tailwindcss-cli -i ./assets/css/input.css -o ./static/css/main.css --minify && npx sass --load-path=node_modules assets/scss/main.scss static/css/theme.css --style compressed",
    "watch:css": "concurrently \"npx tailwindcss-cli -i ./assets/css/input.css -o ./static/css/main.css --watch\" \"npx sass --load-path=node_modules assets/scss/main.scss static/css/theme.css --watch\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "hugo",
    "theme",
    "mod",
    "uksf",
    "military"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@moduk/frontend": "^2.0.31",
    "govuk-frontend": "^5.14.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "lucide-static": "^0.563.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.97.3",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-cli": "^0.1.2"
  }
}
